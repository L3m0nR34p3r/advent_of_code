with open('calories.txt', 'r') as f:
    lines = f.readlines()

max_results = 0
cur_results = 0

for elf in lines:
    if elf != '\n':
        cur_results += int(elf)
    else:
        if cur_results > max_results:
            max_results = cur_results
        cur_results = 0

print(max_results)

one, two, three = 0, 0, 0
cur_results = 0
for elf in lines:
    if elf != '\n':
        cur_results += int(elf)
    else:
        if cur_results > three:
            if cur_results < two:
                three = cur_results
            elif cur_results < one:
                two, three = cur_results, two
            else:
                one, two, three = cur_results, one, two
        cur_results = 0

print(sum([one,two,three]))   



